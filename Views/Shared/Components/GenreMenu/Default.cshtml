@model IEnumerable<Genre>

<li class="dropdown">
    <a asp-controller="Book"
       asp-action="Index"
       class="dropdown-toggle" data-toggle="dropdown">Books<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var genre in Model)
        {
            <li>
                <a asp-controller="Book" asp-action="List"
                   asp-route-genre="@genre.GenreName">@genre.GenreName</a>
            </li>
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Book" asp-action="List" asp-route-Genre="">View all books</a>
        </li>
    </ul>
</li>